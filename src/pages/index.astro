---
import Layout from '../layout/Layout.astro';
import 'bootstrap-icons/font/bootstrap-icons.css';
import HomeAbout from '@organisms/HomeAbout.astro';
import HomeSpecialiaties from '@organisms/HomeSpecialiaties.astro';
import HomeResume from '@organisms/HomeResume.astro';
import HomePortafolio from '@organisms/HomePortafolio.astro';
import type { IData} from '@interface/home';
import { baseApi } from '../lib/baseApi';

const data = baseApi() as IData;
---

<Layout title='Portafolio Jhair Infanzon' homeHeader={data.HomeHeader}>
	<HomeAbout
		title={data.HomeAbout.title}
		subtitle={data.HomeAbout.subtitle}
		text={data.HomeAbout.text}
	/>
	<HomeSpecialiaties
		HomeSpecialities={data.HomeSpecialities}
		Especialities={data.Especialities}
	/>
	<HomeResume
		homeResume={data.HomeResume}
		studies={data.Studies}
		experience={data.Experience}
		skills={data.Skills}
	/>
	<HomePortafolio
		homePortfolio={data.HomePortfolio}
		categoriesProjects={data.CategoriesProjects}
	/>
</Layout>

<style is:global>
	@import '../styles/globals.css';
</style>
