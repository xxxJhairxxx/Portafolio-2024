---
import Container from '@globals/Container.astro';
import Title from '@atoms/Title.astro';
import Button from '@atoms/Button.astro'
---

<Container id='contact' class='Content-contacto'>
	<Title title='Contacto' subtitle='Contratos' />

	<form class='Formulario'>
		<h3 class='for__title'>ESCRIBENOS</h3>

		<input type='text' placeholder='Nombre' class='input' />
		<input type='email' placeholder='email' class='input' />
		<textarea
			class='message'
			placeholder='Cuentanos sobre lo que necesitas...'></textarea>
		<Button class='mx-auto w-fit py-4' >Enviar Mensaje </Button>
	</form>
	<div class='contacto-items'>
        <div class='contacto-address'>
            <h3 class='contacto__title'>DIRECCION</h3>
		<p class='contacto__text'>
			4th Floor, Plot No.22, 145 Murphy Canyon Rd. San Diego CA 2028
		</p>
        </div>
		
		<ul class='contacto__skills'>
			<li class='contacto__items'>
				<i class='bi bi-phone-fill con'></i> +51 922 692 354
			</li>
			<li class='contacto__items'>
				<i class='bi bi-telephone-fill con'></i> (060) 444 434 444
			</li>
			<li class='contacto__items mail'>
				<i class='bi bi-envelope-fill con'></i> jinfanzonquispe30@gmail.com
			</li>
		</ul>
		<div class='sigueme'>
			<h3 class='contacto__title'>SIGUEME</h3>
			<div class='Logo-redes'>
				<i class='bi bi-facebook conx'></i>
				<i class='bi bi-twitter conx'></i>
				<i class='bi bi-github conx'></i>
				<i class='bi bi-linkedin conx'></i>
			</div>
		</div>
	</div>
</Container>

<style scoped>
	.Content-contacto {
		@apply flex !flex-col items-center w-full gap-10;
	}
	.contacto-items {
        @apply w-full flex flex-col items-center justify-center gap-10 ;
		line-height: 30px;
	}
	.contacto__title {
		font-weight: 600;
		color: #4c4d4d;
	}
	.contacto__text {
		color: #4c4d4d;
		@apply text-center w-[68%]
	}

    .contacto-address{
        @apply flex flex-col justify-center items-center; 
    }

	.contacto__skills {
        @apply flex flex-col;
		align-items: center;
		list-style: none;
		color: #4c4d4d;
	}
	
	.sigueme {
        @apply w-[80%] text-[1.7rem] flex flex-col gap-4 text-center;
		
		color: #4c4d4d;
	}

	.Logo-redes {
		display: flex;
		justify-content: space-around;
	}

	.conx {
		font-size: 25px;
		color: #4c4d4d;
		cursor: pointer;
	}
	
	.Formulario {
		@apply w-full grid gap-3;
	}
	.for__title {
        @apply text-[1.7rem];
		width: 100%;
		color: #181818;
		font-weight: 600;
		margin-bottom: 10px;
	}

	.input {
		@apply w-full;
		padding: 2%;
		margin-right: auto;
		border-radius: 10px;
		border: 1px solid #aaaaaa;
	}
	.message {
		@apply w-full h-[15rem];
		border-radius: 10px;
        padding: 2%;
		border: 1px solid #aaaaaa;
	}

    .bi-github:hover {
		color: #000;
	}
</style>
