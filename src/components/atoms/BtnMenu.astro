---
interface Props {
	className?: string;
}

const { className } = Astro.props;
---



<button class={`btnMenu ${className}`}>
	<span />
	<span />
	<span />
</button>

<style is:global>
	.btnMenu {
		@apply w-[2.5rem] h-[1.85rem] flex flex-col justify-between;
		span {
			@apply bg-white w-full rounded-2xl h-[0.25rem] block;
		}
	}
    .visible{
        @apply !translate-y-[0%];
        
    }
</style>

