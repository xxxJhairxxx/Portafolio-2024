---
 interface Props {
    rangoYear: string
    title:string
    subtitle:string
    text:string
 }

 const {rangoYear,title,subtitle,text}= Astro.props as Props
---
<div class="card">
    <span class="bg-resalt">{rangoYear}</span>
    <h3 class="card__title">{title}</h3>
    <h4 class="card__subtitle">{subtitle}</h4>
    <p class="card__description">{text}</p> 
</div>

<style scoped>
    .card{
    padding: 5%;
    border: #cccccc solid 1px;
    margin: 5% 0;
}
.bg-resalt{
    background-color: #20C997;
    color: #fff;
    font-size: 14px;
    width: 85px;
    text-align: center;
    padding: 3px 10px;
    border-radius: 5px;
    margin-bottom: 10px;
}

.card__title{
    font-size: 21px;
    font-weight: 500;
    margin-bottom: 8px;
}
.card__subtitle{
    font-weight: 400;
    font-size: 16px;
    margin-bottom: 8px;
    color: #dc3545;
}
</style>